<% provide(:title, "Manage Properties") %>
<div class="row">
	<h1>Manage <small>your properties</small></h1>

	<div class="col-md-6 col-md-offset-3">
		<% if @properties.any? %>
			<%= will_paginate @properties, renderer: BootstrapPagination::Rails %>
			<ul class="list-group">
				<li class="list-group-item">
					<a href="<%= new_property_path(@property) %>">
  					<span class="glyphicon glyphicon-plus"></span>
  					Add New Property
  					</a>
  				</li>
				<%= render @properties %>
			</ul>
			<%= will_paginate @properties, renderer: BootstrapPagination::Rails %>
		<% else %>
			<h3>No properties currently</h3>
		<% end %>
	</div>
	<aside class="span3">
		<section class="text-center">
			<ul class="nav nav-pills nav-stacked">
  				<li class="active"><a href="#">Manage Properties</a></li>
  				<li><a href="#">My Profile</a></li>
  				<li><a href="#">Messages</a></li>
			</ul>
		</section>
	</aside>

</div>